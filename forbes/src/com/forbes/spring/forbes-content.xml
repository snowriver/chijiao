<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	
	<bean id="contentManager" class="com.forbes.service.article.impl.ContentManagerImpl">
		<property name="contentDAO">
			<ref bean="ContentDAO" />
		</property>
		<property name="contentTypeDAO">
			<ref bean="ContentTypeDAO" />
		</property>
	</bean>
	
	
	<!-- -->	
	
	
	<bean id="contentManagerService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<ref bean="contentManager" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRED,-ForbesException</prop>
			</props>
		</property>
	</bean>
	
	
	<!--  -->
	
	<bean name="/article/ArticleContentAdd" class="com.forbes.struts.action.article.ArticleContentAddAction" singleton="false">
		<property name="contentManager">
			<ref bean="contentManagerService" />
		</property>
	</bean>
	
	<bean name="/article/ContentDelete" class="com.forbes.struts.action.article.ContentDeleteAction" singleton="false">
		<property name="contentManager">
			<ref bean="contentManagerService" />
		</property>
	</bean>
	
	<bean name="/article/NewsContentAdd" class="com.forbes.struts.action.article.NewsContentAddAction" singleton="false">
		<property name="contentManager">
			<ref bean="contentManagerService" />
		</property>
	</bean>
	
	<bean name="/article/ArticleContentSearch" class="com.forbes.struts.action.article.ArticleContentSearchAction" singleton="false">
		<property name="contentManager">
			<ref bean="contentManagerService" />
		</property>
		<property name="articleListManager">
			<ref bean="articleListManagerService" />
		</property>
	</bean>

	<bean name="/article/NewsContentSearch" class="com.forbes.struts.action.article.NewsContentSearchAction" singleton="false">
		<property name="contentManager">
			<ref bean="contentManagerService" />
		</property>
		<property name="newsManager">
			<ref bean="newsManagerService" />
		</property>
	</bean>
	
</beans>